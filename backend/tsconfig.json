{
  "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "outDir": "dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"],
    "swc": true,
    "esm": true
  },
  "files": ["./type.d.ts"],
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
